{
  "plugins": ["@typescript-eslint", "react", "import", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.eslint.json",
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    },
    "react": {
      "pragma": "jsx",
      "version": "16.8"
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "standard-with-typescript",
    "plugin:import/typescript",
    "plugin:react/recommended",
    "prettier"
  ],
  "rules": {
    //plugin:@typescript-eslint/recommended
    "@typescript-eslint/no-namespace": 0,
    "@typescript-eslint/camelcase": 0,
    "@typescript-eslint/class-name-casing": 0,
    "@typescript-eslint/interface-name-prefix": 0,
    "@typescript-eslint/no-empty-function": 0,
    "@typescript-eslint/no-empty-interface": 0,
    "@typescript-eslint/explicit-module-boundary-types": 0,
    "@typescript-eslint/explicit-function-return-type": 0,
    "@typescript-eslint/no-explicit-any": 0,
    "@typescript-eslint/no-non-null-assertion": 0,
    "@typescript-eslint/no-inferrable-types": 0,
    "@typescript-eslint/ban-types": 0,
    "@typescript-eslint/ban-ts-ignore": 0,
    "@typescript-eslint/ban-ts-comment": 0,
    "@typescript-eslint/no-use-before-define": 0,
    "@typescript-eslint/no-unused-vars": [
      1,
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
    ],

    //@typescript-eslint/recommended-requiring-type-checking
    "@typescript-eslint/unbound-method": 0,
    "@typescript-eslint/no-unsafe-assignment": 0,
    "@typescript-eslint/no-unsafe-member-access": 0,
    "@typescript-eslint/require-await": 1,
    "@typescript-eslint/no-floating-promises": 0,
    "@typescript-eslint/no-unsafe-return": 0,
    "@typescript-eslint/no-misused-promises": 0,
    "@typescript-eslint/restrict-template-expressions": 0,
    "@typescript-eslint/prefer-regexp-exec": 0,
    "@typescript-eslint/await-thenable": 2,
    "@typescript-eslint/no-unnecessary-type-assertion": 0,
    "@typescript-eslint/no-unsafe-call": 0,

    //standard-with-typescript
    "@typescript-eslint/naming-convention": 0,
    "@typescript-eslint/method-signature-style": 0,
    "@typescript-eslint/strict-boolean-expressions": 0,
    "@typescript-eslint/no-extraneous-class": 0,
    "@typescript-eslint/no-dynamic-delete": 0,
    "@typescript-eslint/prefer-readonly": 0,
    "@typescript-eslint/prefer-nullish-coalescing": 0,
    "@typescript-eslint/prefer-function-type": 0,
    "@typescript-eslint/consistent-type-definitions": 0,
    "@typescript-eslint/consistent-type-assertions": 0,
    "@typescript-eslint/promise-function-async": 0,
    "@typescript-eslint/array-type": [1, { "default": "array" }],
    "@typescript-eslint/no-useless-constructor": 1,
    "@typescript-eslint/lines-between-class-members": 1,
    "@typescript-eslint/no-invalid-void-type": 0,
    "@typescript-eslint/prefer-includes": 1,
    "@typescript-eslint/prefer-optional-chain": 1,
    "@typescript-eslint/default-param-last": 1,
    "@typescript-eslint/return-await": 1,
    "yoda": 0,
    "no-undef-init": 0,
    "prefer-promise-reject-errors": 0,
    "spaced-comment": 1,
    "one-var": 1,
    "import/first": 1,

    "@typescript-eslint/restrict-plus-operands": 0,
    "@typescript-eslint/no-unsafe-argument": 0,

    //others
    "react/prop-types": 0,
    "react/jsx-key": 1,
    "react/display-name": 0,
    "react/no-unknown-property": 0,
    "react/jsx-curly-brace-presence": 2,
    "import/no-cycle": [1, { "maxDepth": 1, "ignoreExternal": true }],
    "import/order": [
      1,
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index",
          "object"
        ],
        "pathGroups": [
          {
            "pattern": "~*/**",
            "group": "internal"
          }
        ],
        "alphabetize": { "order": "asc" },
        "newlines-between": "never"
      }
    ],
    "import/newline-after-import": 1,
    "no-restricted-globals": [2, "name", "close", "status"],
    "no-empty": 0,
    "no-inner-declarations": 0,
    "no-constant-condition": 0,
    "no-prototype-builtins": 0,
    "no-console": 0,
    "eqeqeq": [1, "always"],
    "node/no-path-concat": 0,
    "no-alert": 0
  }
}
